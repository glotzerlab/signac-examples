&control
   prefix = '{prefix}'
   calculation = '{method}'
   restart_mode = 'from_scratch'
   wf_collect = .true.
   tstress = .true.
   tprnfor = .true.
   outdir = '{outdir}'
   wfcdir = '{wfcdir}'
   pseudo_dir = '{pseudo_dir}'
   verbosity = 'high'
/
&system
   ibrav = 1
   celldm(1) = {lattice_parameter}
   nat = 8
   ntyp = 1
   nbnd = {number_of_bands}
   ecutwfc = {ecut}
/
 &electrons
    diagonalization = 'cg'
    mixing_mode     = 'plain'
    mixing_beta     = 0.7
    conv_thr        = 1.0d-8
    diago_full_acc  = .true.
 /
&ions
/
&cell
   cell_dofree = 'volume'
/
ATOMIC_SPECIES
  Si 28.085 {potential}

